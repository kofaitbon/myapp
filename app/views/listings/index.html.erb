<div class="container>
  <div class="col-md-10 offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="text-center" style="margin-bottom:50px;">
          <span style="font-size:24px; font-weight: bold;">リスティング一覧</span>
        </div>
      </div>
      <ul class="ul-unstyled">
        <% @listings.each do |listing| %>
          <li class="panel-body">
            <div class="row-table">

              <div class="col-sm-7 col-lg-7 col-middle row-space-2">
                <span class="listing-title"><%= listing.listing_title %></span>
              </div>

              <div class="col-md-3 col-sm-3 col-middle row-space-1">

                <%= link_to "編集する", manage_listing_basics_path(listing), class: "btn btn-success pull-right" %>
              </div>

            </div>
          </li>
        <% end %>
      </ul>
    </div>

  </div>
</div>
